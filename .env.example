# Database Configuration
# PostgreSQL connection string (REQUIRED for Vercel deployment)
# Формат: postgresql://user:password@host:port/database?schema=public
#
# Локальная разработка с Docker:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/etcha?schema=public"
#
# Neon (рекомендуется для продакшена):
# DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"
#
# Vercel Postgres:
# DATABASE_URL автоматически устанавливается Vercel
DATABASE_URL="postgresql://user:password@localhost:5432/etcha?schema=public"

# Solana RPC Configuration
# Для продакшена используйте mainnet, для разработки - devnet
SOLANA_RPC_URL="https://api.devnet.solana.com"
NEXT_PUBLIC_SOLANA_RPC_URL="https://api.devnet.solana.com"

# Solana Network
# Используется для ссылок на explorer: "devnet" или "mainnet-beta"
NEXT_PUBLIC_SOLANA_NETWORK="devnet"

# Application Base URL
# URL вашего приложения (для продакшена замените на ваш домен)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Platform Wallet (опционально)
PLATFORM_WALLET_ADDRESS=""

# Irys/Arweave Upload (опционально)
IRYS_PRIVATE_KEY=""
